<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true" 
	android:focusableInTouchMode="true"
     >
    <include
        android:id="@+id/a_detaillist_topbar" 
        layout="@layout/view_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText 
        android:id="@+id/a_detaillist_et_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="型号:"
        />
	<ListView 
	    android:id="@+id/a_detaillist_lv"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    ></ListView>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/icon_item"
	    >
	    <View 
	        android:layout_width="0dp"
	        android:layout_weight="0.01"
	        android:layout_height="50dp"
	        />
	    <Button 
		    android:id="@+id/a_detaillist_start"
		    android:layout_width="0dp"
		    android:layout_weight="0.5"
		    android:layout_height="50dp"
		    android:gravity="center"
		    android:background="@drawable/icon_button"
		    android:drawableLeft="@drawable/icon_scan"
		    android:textColor="#ffffff"
		    android:text="开始扫描"
		    />
	    <View 
	        android:layout_width="0dp"
	        android:layout_weight="0.04"
	        android:layout_height="50dp"
	        />
		<Button 
		    android:id="@+id/a_detaillist_add"
		    android:layout_width="0dp"
		    android:layout_weight="0.5"
		    android:layout_height="50dp"
		    android:layout_gravity="center"
		    android:background="@drawable/icon_button"
		    android:drawableLeft="@drawable/icon_ok"
		    android:textColor="#ffffff"
		    android:text="添加到表单"
		    />
		<View 
	        android:layout_width="0dp"
	        android:layout_weight="0.01"
	        android:layout_height="50dp"
	        />
	</LinearLayout>
</LinearLayout>
