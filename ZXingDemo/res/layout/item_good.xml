<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_item2" >
	<TextView
	    android:id="@+id/item_good_number"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:paddingTop="8dp"
	    android:text="编号："
	    android:textColor="#000000"
	    />    
	<TextView 
	    android:id="@+id/item_good_mode"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/item_good_number"
	    android:paddingTop="5dp"
	    android:paddingBottom="8dp"
	    android:text="型号：未知"
	    android:textColor="#000000"
	    />
	<Button 
	    android:id="@+id/item_good_delete"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="#ecf0f1"
	    android:drawableRight="@drawable/icon_delete2"
	    />
</RelativeLayout>
